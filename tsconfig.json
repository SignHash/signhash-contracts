{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["bignumber.js", "chai", "mocha", "node"]
  },
  "lib": ["es2015"],
  "include": [
    "index.ts",
    "truffle-config.ts",
    "types/*.ts",
    "test/*.ts",
    "migrations/*.ts",
    "bin/*.ts"
  ]
}
