{
  "name": "signhash-contracts",
  "version": "0.0.1",
  "description": "SignHash smart contracts",
  "scripts": {
    "compile": "npm-run-all compile:sol compile:ts",
    "compile:sol": "truffle compile --contracts_build_directory .cache/contracts",
    "compile:ts": "tsc",
    "test": "npm-run-all compile test:run",
    "test:run": "truffle test --contracts_build_directory .cache/contracts",
    "seed": "testrpc",
    "lint": "npm-run-all lint:solium lint:tslint",
    "lint:tslint": "tslint *.ts migrations/*.ts test/*.ts",
    "lint:solium": "solium --dir contracts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SignHash/signhash-contracts.git"
  },
  "author": "Jakub Stefanski",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/SignHash/signhash-contracts/issues"
  },
  "homepage": "https://github.com/SignHash/signhash-contracts#readme",
  "dependencies": {
    "truffle": "^3.4.9"
  },
  "devDependencies": {
    "@types/bignumber.js": "^4.0.3",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "ethereumjs-testrpc": "^4.1.3",
    "npm-run-all": "^4.1.1",
    "solium": "^0.5.5",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "web3-typescript-typings": "^0.6.0"
  }
}
