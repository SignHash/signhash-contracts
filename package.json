{
  "name": "signhash-contracts",
  "version": "0.0.1",
  "description": "SignHash smart contracts",
  "scripts": {
    "compile": "npm-run-all compile:ts compile:sol",
    "compile:sol":
      "truffle compile --contracts_build_directory .cache/contracts",
    "compile:ts": "tsc",
    "test": "npm-run-all compile test:run",
    "test:run": "truffle test --contracts_build_directory .cache/contracts",
    "seed": "testrpc",
    "lint": "npm-run-all lint:solium lint:tslint",
    "lint:tslint": "tslint *.ts migrations/*.ts test/*.ts",
    "lint:solium": "solium --dir contracts",
    "format": "prettier --write *.json *.ts migrations/*.ts test/*.ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,json}": ["format", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SignHash/signhash-contracts.git"
  },
  "author": {
    "name": "Jakub Stefanski",
    "url": "https://jakubstefanski.com"
  },
  "contributors": [
    {
      "name": "Marcin Biernat",
      "url": "https://marcinbiernat.pl"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SignHash/signhash-contracts/issues"
  },
  "homepage": "https://github.com/SignHash/signhash-contracts#readme",
  "dependencies": {
    "truffle": "^3.4.9"
  },
  "devDependencies": {
    "@types/bignumber.js": "^4.0.3",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/ramda": "^0.24.14",
    "ethereumjs-testrpc": "^4.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.2",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.0",
    "ramda": "^0.24.1",
    "solium": "^0.5.5",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
