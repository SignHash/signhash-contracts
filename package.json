{
  "name": "signhash-contracts",
  "version": "0.0.1",
  "description": "SignHash smart contracts",
  "scripts": {
    "compile": "run-s compile:ts compile:sol",
    "compile:sol": "truffle compile --contracts_build_directory .cache/contracts",
    "compile:ts": "tsc",
    "test": "run-s compile:sol test:sol test:ts",
    "test:ts": "run-s compile:ts test:js",
    "test:sol": "truffle test --contracts_build_directory .cache/contracts test/*.sol",
    "test:js": "truffle test --contracts_build_directory .cache/contracts test/*.js",
    "migrate": "truffle migrate --reset --network testrpc",
    "testrpc": "testrpc --mnemonic \"try exile adapt shed width laugh similar duty neglect kick rug require\"",
    "seed": "run-p testrpc migrate",
    "lint": "run-p -c --aggregate-output lint:solhint lint:tslint",
    "lint:tslint": "tslint *.ts migrations/*.ts test/*.ts",
    "lint:solhint": "solhint contracts/*.sol test/*.sol",
    "format": "prettier --write *.json *.js *.ts migrations/*.ts test/*.ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SignHash/signhash-contracts.git"
  },
  "author": {
    "name": "Jakub Stefanski",
    "url": "https://jakubstefanski.com"
  },
  "contributors": [
    {
      "name": "Marcin Biernat",
      "url": "https://marcinbiernat.pl"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SignHash/signhash-contracts/issues"
  },
  "homepage": "https://github.com/SignHash/signhash-contracts#readme",
  "dependencies": {
    "ethereumjs-testrpc": "^4.1.3",
    "truffle": "^4.0.1"
  },
  "devDependencies": {
    "@types/bignumber.js": "^4.0.3",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/ramda": "^0.24.18",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "ramda": "^0.24.1",
    "solhint": "^1.1.7",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
